{% extends 'base.html.twig' %}

{% block page_content %}
    {% form_theme form '@App/Form/fields.html.twig' %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Canchas
                <small>Panel de Control</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Escritorio</li>
            </ol>
        </section>
        <section class="content">
            <div class="hpanel hred">
                <div class="panel-heading">
                    <h3>Nueva Cancha</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.nameCanch, 'Nombre', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_widget(form.nameCanch) }}
                        <br></br>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.cubi, 'Techada', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_widget(form.cubi) }}
                        <br></br>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.precCanch, 'Precio', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_widget(form.precCanch) }}
                        <br></br>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.idCapa, 'Capacidad', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_widget(form.idCapa) }}
                        <br></br>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.idTipo, 'Tipo', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_widget(form.idTipo) }}
                        <br></br>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.idComp, 'Complejo', {'label_attr': {'class': 'foo'}}) }}
                        {{ form_widget(form.idComp) }}
                        <br></br>
                    </div>
                    <div>
                        <div class="panel-footer text-center">
                            <a class="btn btn-default" href="{{ path('cancha_index') }}">Atr√°s</a>
                            <input type="submit" value="Crear" class="btn btn-success"/>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </section>
    </div>
{% endblock %}