{% extends 'base.html.twig' %}

{% block aside %}
    {% include ':Admin:aside_super.hmtl.twig' %}
{%endblock%}

{% block page_content %}
    <div class="content-wrapper">
        <section class="content-header">
            <h1>
                Campeonato
                <small>Panel de Control</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
                <li class="active">Escritorio</li>
            </ol>
        </section>
        <section class="content">
            <div class="hpanel hred">
                <div class="panel-heading">
                    <h3>Campeonatos</h3>
                    <a href="{{ path('champ_new') }}" class="pull-right"><i class="fa fa-plus-circle fa-3x"></i></a>
                </div>

                <div class="panel-body">
                    <input type="search" class="light-table-filter" data-table="order-table" placeholder="Buscar"/>
                    <div class="table-responsive">
                        <table class="table order-table table">
                            <thead>
                                <tr>
                                    <th class="hidden">Idcamp</th>
                                    <th>Nombre</th>
                                    <th>Fecha Inicio</th>
                                    <th>Fecha Finalización</th>
                                    <th>Precio Inscripción</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for campeonato in campeonatos %}
                                <tr>
                                    <td class="hidden"><a href="{{ path('champ_show', { 'id': campeonato.idCamp }) }}">{{ campeonato.idCamp }}</a></td>
                                    <td>{{ campeonato.nameCamp }}</td>
                                    <td>{% if campeonato.fechInic %}{{ campeonato.fechInic|date('Y-m-d') }}{% endif %}</td>
                                    <td>{% if campeonato.fechFina %}{{ campeonato.fechFina|date('Y-m-d') }}{% endif %}</td>
                                    <td>{{ campeonato.precInsc }}</td>
                                    <td class="tools">
                                        <a href="{{ path('champ_edit', { 'id': campeonato.idCamp }) }}"><i class="fa fa-edit fa-2x"></i> </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}